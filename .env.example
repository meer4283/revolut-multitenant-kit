# Public base URL where your Next.js API is reachable (no trailing slash)
PUBLIC_API_BASE_URL=https://api.yourdomain.com

# Default single-tenant webhook secret (used only if you haven't set up tenant records yet)
REVOLUT_WEBHOOK_SECRET=

# Optional: global default API version header
REVOLUT_API_VERSION=2024-09-01

# Demo only: NEXT public env to show Sandbox/Prod banner in UI
NEXT_PUBLIC_REVOLUT_MODE=sandbox
NEXT_PUBLIC_REVOLUT_PUBLIC_KEY=pk_sandbox_xxx
